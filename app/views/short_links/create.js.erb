var errorExplanation = document.querySelector('#error-explanation');
var shortLink = document.querySelector("#short-link");

<% if @short_link.errors.any? %>
  shortLink.innerHTML = '';
  errorExplanation.innerHTML = '<%= escape_javascript(render 'shared/validation_messages', object: @short_link) %>';
<% else %>
  errorExplanation.innerHTML = '';
  shortLink.innerHTML = '<%= escape_javascript(render 'generated_short_link', short_link: @short_link) %>';
  var shortLinkForm = document.querySelector("#short-link-form");
  shortLinkForm.reset();
<% end %>
